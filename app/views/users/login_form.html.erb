

<%= form_with url: login_path, method: :post do |form| %>
  <%= form.label :name, "Username:" %>
  <%= form.text_field :name %>

  <%= form.label :email, "Email" %>
  <%= form.email_field :email %>

  <%= form.label :password, "Password:" %>
  <%= form.password_field :password %>
  
  <%= form.submit "Log In" %>

<% end %>